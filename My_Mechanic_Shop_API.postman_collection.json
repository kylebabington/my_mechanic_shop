{
  "info": {
    "name": "My Mechanic Shop API",
    "description": "API endpoints for Customers, Mechanics, and Service Tickets",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "customerId",
      "value": "1"
    },
    {
      "key": "mechanicId",
      "value": "1"
    },
    {
      "key": "ticketId",
      "value": "1"
    }
  ],
  "item": [
    {
      "name": "Customers",
      "item": [
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"555-1234\"\n}"
            },
            "url": "{{baseUrl}}/customers/"
          }
        },
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/customers/"
          }
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/customers/{{customerId}}"
          }
        },
        {
          "name": "Update Customer",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"email\": \"john.updated@example.com\",\n  \"phone\": \"555-5678\"\n}"
            },
            "url": "{{baseUrl}}/customers/{{customerId}}"
          }
        },
        {
          "name": "Delete Customer",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/customers/{{customerId}}"
          }
        }
      ]
    },
    {
      "name": "Mechanics",
      "item": [
        {
          "name": "Create Mechanic",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Mechanic\",\n  \"email\": \"jane@shop.com\",\n  \"phone\": \"555-9999\",\n  \"salary\": 55000.00\n}"
            },
            "url": "{{baseUrl}}/mechanics/"
          }
        },
        {
          "name": "Get All Mechanics",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/mechanics/"
          }
        },
        {
          "name": "Update Mechanic",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Mechanic Updated\",\n  \"email\": \"jane.updated@shop.com\",\n  \"phone\": \"555-8888\",\n  \"salary\": 60000.00\n}"
            },
            "url": "{{baseUrl}}/mechanics/{{mechanicId}}"
          }
        },
        {
          "name": "Delete Mechanic",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/mechanics/{{mechanicId}}"
          }
        }
      ]
    },
    {
      "name": "Service Tickets",
      "item": [
        {
          "name": "Create Service Ticket",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"VIN\": \"1HGBH41JXMN109186\",\n  \"service_date\": \"2025-02-17\",\n  \"service_desc\": \"Oil change and brake inspection\",\n  \"customer_id\": 1\n}"
            },
            "url": "{{baseUrl}}/service-tickets/"
          }
        },
        {
          "name": "Get All Service Tickets",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/service-tickets/"
          }
        },
        {
          "name": "Assign Mechanic to Ticket",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/service-tickets/{{ticketId}}/assign-mechanic/{{mechanicId}}"
          }
        },
        {
          "name": "Remove Mechanic from Ticket",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/service-tickets/{{ticketId}}/remove-mechanic/{{mechanicId}}"
          }
        }
      ]
    }
  ]
}
